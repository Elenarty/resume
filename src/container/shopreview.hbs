<main class="grid col-12 m-p-0">
    <section class=" nav text-start w-100">
        {{#with navigation}}
        <nav class="navbar navbar-expand-lg bg-body-tertiary card ms-0 w-100 ">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav"> 
                       {{#each links}}
                              <a class="nav-link active {{#if @last}}nav-link disabled{{/if}}" aria-current="page" href="{{href}}" target="blank">{{text}}</a>
                       {{/each}}          
                    </ul> 
                </div>
            </div>
        </nav>
        {{/with}} 
    </section>
   
    {{#with formBlock}}
    <section class="container position-relative d-flex grid text-start w-100 justify-content-evenly"> 
        <div class="d-flex flex-row align-items-start">
            <div class="col-8 col-row-3">
                <h1>{{header}}</h1>
                <p class="mt-3">{{rating.title}}: {{rating.value}}</p>
                <div class="row d-grid gap-3 d-md-flex justify-content-md-start my-4 py-3">
                    {{#with actionBlock}}
                        <div class="nav nav-tabs col-12 py-3">
                            {{#each tabs}}
                               <div class="nav-item">
                                    {{#if isActive}}<a class="nav-link active" aria-current="page" href="#"><b>{{text}}</b></a>{{/if}}
                                    {{#unless isActive}} <a class="nav-link" href="#">{{text}}</a>{{/unless}}
                                </div>
                            {{/each}}
                        </div>
                        <div class="card col-12 p-3 my-3">
                           {{#with report}}
                               <label for="form-select" class="form-label mb-1">{{title}}</label>
                               <a href="{{button.link}}" class="btn btn-secondary col-4" target="blank">{{button.text}}</a>
                           {{/with}}
                       </div>
                    {{/with}}
               </div>
               <hr> 
               {{#with feedbackBlock}}
                <div class="row d-grid gap-3 d-md-flex justify-content-md-start my-4">
                    <h3>{{title}}</h3>
                    {{#each buttons}}
                        <div class="col text-center px-0 mx-1">
                            {{#if isWarning}} <a href="{{link}}" class="btn btn-warning w-100 h-100 pt-3" target="blank">{{text}}</a>{{/if}}
                            {{#if isSuccess}} <a href="{{link}}" class="btn btn-success w-100" target="blank">{{text}}</a>{{/if}}
                            {{#if isDanger}} <a href="{{link}}" class="btn btn-danger w-100" target="blank">{{text}}</a>{{/if}}
                        </div>
                   {{/each}} 
                </div>
               {{/with}}
            </div>
            <div class="z-2 position-absolute text-start end-0 col-4 p-2 me-0">
              {{#with goodsInfo}}
                <div class="card p-2 my-2">
                       <img class="card-img-top" src="{{photo}}"> 
                        <h4>{{name}}</h4>
                </div>
                <div class="card p-2 my-2">
                        <p class="h4">{{price}}</p>
                        {{#if inMarket}}<p>Є в наявності</p>{{/if}}
                        {{#each buttons}}
                             {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary mb-2" target="blank">{{text}}</a>{{/if}}
                             {{#if isSecondary}} <a href="{{link}}" class="btn btn-secondary" target="blank">{{text}}</a>{{/if}}
                        {{/each}}
                </div>
                <div class="card p-2 my-2">
                    {{#with seller}}
                        <p>{{title}}: <b>{{value}}</b></p>
                    {{/with}}
                </div>
               {{/with}}
            </div>
        </div>
    </section>
    {{/with}}
    <hr>
    {{#each reviewList}}
    <section class="container px-0 py-3">
        {{> reviewItem}}  
    </section>
    {{/each}}
    <section class="container text-center px-0">
         {{#with service}}
           <div class="card w-100 text-bg-success my-3">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text mb-1">{{description}}</p>
                    {{#each buttons}}
                    <a href="{{link}}" class="btn btn-primary mt-2" target="blank">{{text}}</a><br>
                    {{/each}}
                </div>
            </div>
         {{/with}}
    </section>
    <hr>
    <section class="grid text-start w-100">
        <div class="btn-group justify-content ">
               {{#each footer}}
                <ul class="nav flex-column d-grid gap-3 h-w-100">
                   {{#each this}}  
                     <li class="nav-item me-4">
                         <a class="link text-decoration-none mb-2 {{#if @last}}nav-link disabled p-0{{/if}}" href="{{[link]}}" target="blank" >{{[text]}}</a>
                     </li>
                   {{/each}}
                </ul>
              {{/each}}
        </div>
    </section> 
</main>