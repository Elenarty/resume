<main>
    <div class="text-center">
        <h1>{{page_header.title}}</h1>
        <p class="text-uppercase">{{page_header.description}}</p>
    </div>
    {{#with section}}
    <section>
        {{#with about_us}}
        <div class="card">
            <div class="card-body text-end">
               <p class="display-6">
                <b>{{title_list.main}}</b></p>
                <h2>{{title_list.sub}}</h2><br>
                <div class="text-start">
                   <button type="button" class="btn btn-outline-info">{{button.text}}</button>
                </div>
            </div>
        </div>
        {{/with}}
        <br>
        {{#with advantage}}
        <div class="card">
            <div class="card-body">
               <p class="display-5 text-muted"><b>{{title}}</b></p>
            <div class="card">
                {{#with efficiency}}
                <div class="card-body">
                    <span class="display-4 text-muted"><b>{{title}}</b></span><br><br>
                    <h6>{{sub_title}}</h6><br>
                    <p>{{description}}</p><br>
                        <button type="button" class="btn btn-outline-warning">{{button}}</button>
                </div>
                {{/with}}
                </div>
                <br>
                <div class="card">
                {{#with innovation}}
                <div class="card-body text-center">
                    <span class="display-4 text-muted"><b>{{title}}</b></span><br><br>
                    <h6>{{sub_title}}</h6><br>
                    <p>{{description}}</p><br>
                    <div class="text-start">
                        <button type="button" class="btn btn-outline-warning">{{button}}</button>
                    </div>
                </div>
                {{/with}}
                </div>
                <br>
                <div class="card text-end">
                {{#with collaboration}}
                <div class="card-body">
                    <span class="display-4 text-muted"><b>{{title}}</b></span><br><br>
                    <h6>{{sub_title}}</h6><br>
                    <p>{{description}}</p><br>
                    <div class="text-start">
                        <button type="button" class="btn btn-outline-warning">{{button}}</button>
                    </div>
                </div>
                {{/with}}
                </div>
            </div>
        </div>
        {{/with}}
        <br>
        {{#with agreement}}
        <div class="card">
            <div class="card-body">
                <span class="display-5"><b>{{title}}</b></span><br><br>
                {{#with info}}
                <div class="card">
                     <div class="card-body">
                         <h5>{{sub_title}}</h5>
                         <br>
                         <div class="card">
                             <div class="card-body">
                                  <p class="text-secondary">{{detail.text}}</p>
                                  <br>
                                  <button type="button" class="btn btn-success">{{detail.button}}</button>
                             </div>
                         </div>
                     </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </section>
    {{/with}}
</main>