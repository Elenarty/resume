{{!-- 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            
                {{> title data='Work history' big=true}}
        
            <div>
                <ul>
                   {{#each works}}
                       <li>
                           <div>{{position}}</div>
                           <br>
                           <div>
                               {{duration.from}} - 
                               {{#if duration.to}} 
                                  {{duration.to}} 
                                {{else}} 
                                (I work here now) 
                                {{/if}}
                            </div>
                           <br>
                           <div>
                                {{#if company.url includeZero=true}} 
                                    <a>{{> link href=company.url text=company.name blank=true noLine=true}}</a>
                                {{else}}
                                     <b>{{company.name}}</b>
                                 {{/if}}
                            </div>
                           <br>
                           <br>
                           <div>
                               <strong> ProJects ({{projectAmount}}) </strong>
                           </div>
                           <br>
                           <ul>
                               {{#each projects}}
                                  <li>
                                     <div>{{> link href=url text=name blank=true noLine=true}}</div>
                                     <br>
                                     <div>
                                         <p>
                                            <em> About project: </em> 
                                            <br>
                                            {{about}}
                                         </p>
                                     </div>
                                     <br>
                                     <div> 
                                        <em> Project stacks ({{stackAmoGnt}}) </em>
                                        <br>
                                        <ul>
                                        {{#each stacks}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                        </ul>
                                     </div>
                                      <br>
                                      <br>
                                     <div> 
                                        <em> Project awards ({{awardAmount}}) </em>
                                        <br>
                                        <ul>
                                        {{#each awards}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                        </ul>
                                     </div>
                                     <br>
                                  </li>
                               {{/each}}
                           </ul>
                       </li>
                       <br>
                   {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}

</div>

