<main>
    <section>
        {{#with navigation}}
        <div class="grid text-start">
            <ul class="nav row row-cols-4"> 
                {{#each links}}
                <li class="nav-item g-col-2">
                    <a class="nav-link active" href="{{href}}" target="blank">{{text}}</a>
                </li>
                {{/each}}      
                <li class="nav-item g-col-2">
                   <a class="btn btn-primary" href="{{button.href}}" target="blank">{{button.text}}</a>
                </li>        
            </ul> 
        </div>
        {{/with}}
        <hr>
        {{#with header}}
        <div class="container py-4">
               <h1>{{title}}</h1>
               <p class="text-start">{{description}}</p>
               {{#with button}}
               <a type="button" class="btn btn-primary" href="{{link}}" target="blank">{{text}}</a>
               {{/with}}
            </div>
        {{/with}}
    </section>
    <hr>
    <section class="grid text-start">
        {{#with city}}
        <div class="header py-4">
            <h2>{{title}}</h2>
        </div> 
        <div class="card-group py-2">
            <div class="row row-cols-1 row-cols-md-2">
            {{#each cards}}
               <div class="col-5 g-2 py-2">
                   <div class="card h-100">
                        <img class="card-img-top h-40" src="{{picture.src}}" alt="{{picture.alt}}"> 
                        <div class="card-body">
                             <h5 class="card-title">{{title}}</h5>
                             <p class="card-text">{{description}}</p>
                        </div>
                        <div class="footer p-3">
                             <a href="{{button.href}}" class="btn w-50 btn-primary" target="blank">{{button.text}}</a>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with winner}}
        <div class="header py-4">
            <h2>{{title}}</h2>
        </div> 
        <br>
        <table class="table table-borderless table-hover">
        {{#with table}} 
            <thead>
                <tr class="border-top">
                 {{#each head}}
                   <th scope="col">{{[]}}</th>
                 {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr class="border-top">
                   <th scope="row">{{place}}</th>
                   <td>{{name}}</td>
                   <td>{{surname}}</td>
                   <td>{{nickname}}</td>
               </tr>
               {{/each}}
            </tbody>
        {{/with}}
        </table>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with gallery}}
        <div class="header py-4">
            <h2>{{title}}</h2>
        </div> 
        <div class="card-group py-4">
            <div class="row row-cols-3">
            {{#each cards}}
                <div class="col-4 g-2">
                    <div class="card h-100">
                        <div class="list-group h-100">
                            <b class="list-group-item list-group-item-secondary card-header h-100">{{name}}</b>
                            {{#each items}}
                            <div class="list-group-item">{{[]}}</div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section class="grid text-start">
        {{#with relaxion}}
        <div class="header py-4">
            <span class="display-3">{{title}}</span>
        </div> 
        <div class="card-group py-2">
            <div class="row row-cols-1 row-cols-md-2">
            {{#each cards}}
               <div class="col-5 g-2 py-2">
                   <div class="card h-100 text-bg-secondary">
                         <div class="card-header">{{header}}</div>
                        <div class="card-body"> 
                             <h3><small class="card-title-secondary mt-3">{{title}}</small></h3>
                             <p class="card-text mt-3">{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section class="grid text-center">
        {{#with rest}}
        <div class="card-group py-4">
            <div class="row row-cols-1 row-cols-md-2">
            {{#each cards}}
               <div class="col-5 g-2 py-2">
                   <div class="card h-100">
                        <div class="card-header">{{header}} </div>
                        <div class="card-body">
                             <h5 class="card-title">{{title}}</h5>
                             <p class="card-text">{{description}}</p>
                             <a href="{{button.href}}" class="btn w-50 btn-primary" target="blank">{{button}}</a>
                        </div>
                        <div class="card-footer">{{footer}}</div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>  
    <section class="grid text-start">
        {{#with proposition}}
        <div class="header py-4">
            <span class="display-2">{{title}}</span>
        </div> 
        <div class="card-group py-2">
            <div class="row">
            {{#each card}}
               <div class="col-5 g-2 py-2">
                   <div class="card h-100 text-white bg-warning">
                         <div class="card-header">{{header}}</div>
                        <div class="card-body"> 
                             <h3><small class="card-title-secondary mt-3">{{title}}</small></h3>
                             <p class="card-text mt-3">{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section class="grid text-start">
       {{#with footer}}
        <div class="header py-2">
            <h5>{{title}}</h5>
        </div> 
        <br>
        <div class="btn-group">
            <div class="d-grid gap-2 col-3">
                {{#each socialMedia}}
                <div class="nav-item w-h-30 mt-2">
                     <a class=" link link-underline link-underline-light" href="{{link}}" target="blank">{{name}}</a>
                </div>
                {{/each}}
            </div>
            <div class="d-grid gap-2 col-3 mx-5">
                {{#each partners}}
                <div class="nav w-h-30 mt-2">
                     <a class="btn btn-outline-dark w-100" href="{{link}}" target="blank">{{name}}</a>
                </div>
                {{/each}}
            </div>
            <div class="d-grid gap-2 col-3">
                {{#each navigation}}
                <div class="nav w-h-30 mt-2">
                    <a class="btn btn-outline-info w-100" href="{{href}}" target="blank">{{text}}</a>
                </div>
               {{/each}}
            </div>
        </div>
        {{/with}}
    </section> 
    <hr>
</main>