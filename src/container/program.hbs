{{!-- 
Це код container файлу для program сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/program"
--}}

<div>
     {{#with program}}
        <section>
          {{#with excursion}}
            <div>
                <h1>{{name}}</h1>
            </div>
            <br>
            <div>
               {{#with location}}
               <address>
                   {{city}}  / {{country}}
               </address>
               {{/with}}
            </div>
            <br>
            <div>
                {{date}}
            </div>
            <br>
            <hr>
                <h3>program:</h3>
                 <ul>
                    {{#each program}}
                        <li>
                           <details> 
                               <summary>
                                      <b>{{name}} ({{type}}) - {{duration}}h</b>
                               </summary>
                                    {{#with details}}
                                      <h4>{{museum.name}} {{venue.name}}</h4>
                                      <address>
                                        {{museum.location.address}}<br>{{museum.location.city}}  {{museum.location.country}}
                                        {{venue.location.address}}<br>{{venue.location.city}}  {{venue.location.country}}
                                      </address>
                                      <br>
                                      <ul>
                                       {{#each museum.exhibits}}
                                         <li>
                                            "{{name}}"   {{artist}}
                                            <p>{{description}}</p>
                                            {{#unless point audio_guide=true}} (audio guide) {{/unless}}
                                         </li><br>
                                       {{/each}}
                                       </ul>
                                       <ul>
                                       {{#each performers}}
                                         <li>
                                            "{{name}}"  - {{type}}
                                         </li><br>
                                       {{/each}}
                                       </ul>
                                       
                                       <p>guide: {{guide.name}} ({{guide.language}})<br>rating: {{guide.rating}}</p>
            
                                    {{/with}}

                           </details>  
                        </li>
                        <br>
                    {{/each}}
                    
                </ul>
               
        </section>

     
            {{> title data='My hobbies' }}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain includeZero=true}} (favourite) {{/if}}
                </li>
                {{/each}}
            </ul>
         {{/with}}
        </section>
    {{/with}}

</div>

