{{!-- 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/person"
--}}

<div>
    {{#with person}}
        <section>
            <div>
                <h1>{{name}}</h1>
            </div>
            
             <div>
                age: {{age}} / gender: {{gender}}
             </div>

             <br>

             <div>
               {{#with address}}
               <address>
                  {{street}} / {{city}} / {{state}}
                  <br>
                  {{zip}} / {{country}}
               </address>
               {{/with}}
             </div>
             <br>
             <hr>
             <div>
                 {{> title data='Education' }}
                 <ul>
                     {{#each education}}
                     <li>
                         {{degree}} / {{major}}
                         <br>
                         {{university}}
                         <br>
                         {{graduationYear}}
                         {{#unless graduationYear}} (studying) {{/unless}}
                     </li>
                     {{/each}}
                 </ul>
             </div>
             <br>
             <hr>
             <div>
                 {{> title data='WorkExperience' }}
                 <ul>  
                     {{#each workExperience}}
                     <li>
                         {{company}} / {{title}}
                         <br>
                         {{startDate}} - {{endDate}}
                         {{#unless endDate}} (working now) {{/unless}}
                         <br><br>
                         <b>Responsibilities:</b>
                         <br>
                         <ul>
                         {{#each responsibilities}}
                              <li>
                                {{[]}}
                              </li>
                         {{/each}}
                         </ul>
                        <br>
                        <hr>
                        <b>{{year_founded}}  {{industry}}</b>
                        <br>
                        <br>
                        emplyees:
                        {{#each employees}}
                        <ul>
                            <li>
                                name: {{name}}
                                <br>
                                position: {{position}}
                                <br>
                                department: {{department}}
                                <br>
                                projects: 
                                {{#each projects}}
                                <ul>
                                    <li>
                                        {{name}}
                                        <br>
                                        {{description}}
                                        <br>
                                        {{status}}
                                        <br>
                                        teams:
                                        {{#each teams}}
                                        <ul>
                                           <li>
                                                {{team_name}}
                                                <br>
                                                {{team_leader.name}} - {{team_leader.title}} /
                                                 {{> link text=team_leader.email href=team_leader.email blank=true noLine=true}}
                                                 <br>
                                                 {{#each team_members}}
                                                 <ul>
                                                    <li>
                                                        {{name}} - {{title}} /
                                                         {{> link text=email href=email blank=true noLine=true}}
                                                         <br>
                                                         skills: {{skills}}
                                                         <br>
                                                         projects:
                                                         {{#each projects}}
                                                         <ul>
                                                            <li>
                                                                {{name}}
                                                                <br>
                                                                {{description}}
                                                                <br>
                                                                {{technologies}}
                                                                <br>
                                                                {{#each team_members}}
                                                                <ul>
                                                                    <li>
                                                                        {{name}} {{title}}
                                                                    </li>
                                                                </ul>
                                                                {{/each}}

                                                            </li>
                                                         </ul>
                                                         {{/each}}
                                                     </li>
                                                 </ul>
                                                 {{/each}}
                                           </li>
                                        </ul>
                                        {{/each}}
                                    </li>
                                </ul>{{/each}}
                            </li>
                        </ul>
                        {{/each}}
                     </li>       
                     {{/each}}
                 </ul>
             </div>
        </section>
    {{/with}}
        
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/person.hbs
    Адже наш layout/person.hbs має вже структуру HTML
--}}