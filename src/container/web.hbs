{{!-- 
Це код container файлу для web сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/web"
--}}

<div>
   {{#with web}}
     <section>
          <ul>
             {{#each languages}}
                <li>
                    <h1> {{name}} </h1> ({{version}})
                    <p>{{description}}</p>
                 {{#each elements}}
                 <ul>
                    <li> 
                     {{name}} - {{description}}
                      <ul>
                      {{#each attributes}}
                          <li>"{{name}}"- {{description}}</li>
                      {{/each}}
                      </ul>
                    </li>
                 </ul>
                 <br>
                 {{/each}} 
                
                 {{#each properties}}
                 <ul>
                    <li> 
                     "{{name}}" - {{description}}
                      <ul>
                      {{#each values}}
                          <li>"{{value}}"- {{description}}</li>
                      {{/each}}
                      </ul>
                    </li>
                 </ul>
                 <br>
                 {{/each}} 

                 {{#each functions}}
                 <ul>
                    <li> 
                     "{{name}}" - {{description}}
                      <ul>
                      {{#each parameters}}
                          <li>"{{name}}"({{type}}) - {{description}}</li>
                      {{/each}}
                      </ul>
                    </li>
                 </ul>
                 <br>
                 {{/each}} 
              </li><br><hr> 
            {{/each}}
          </ul>
     </section>
   {{/with}}
</div>

