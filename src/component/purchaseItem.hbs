<div class="grid p-2 w-100">
    <div class="row pb-0">
        <div class="col-4">
            <p class="text small m-1">{{number}}</p>
           <b>{{status}}</b>
        </div>
        <div class="col-2">
          {{#with amount}}
            <p class="text small m-1">{{title}}</p>
            <b>{{value}}</b>
          {{/with}}
        </div>
        <div class="col-4 grid justify-content-start">
            {{#each images}}
                  <img src="{{[]}}" class="col-3 img-fluid rounded-start" alt="">
            {{/each}}
        </div>
        <div class="col-2">
            {{#with button}}
                {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary my-2" target="blank">{{text}}</a>{{/if}}
            {{/with}}
        </div>  
    </div>
    <hr>
 </div>
