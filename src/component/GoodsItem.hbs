 <div class="card grid mb-3 p-2 w-100">
    <div class="row align-items-center g-0">
        <div class="col-2">
             <img src="{{image}}" class="img-fluid rounded-start" alt="{{name}}">
        </div>
        <div class="col-4 ps-3">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
        </div>
        <div class="col-2 px-3">
          {{#with price}}
            <h8>{{title}}</h8>
            <p>{{value}}</p>
          {{/with}}
        </div>
        <div class="col-2">
            {{amount}}
        </div>
        <div class="col-2">
            {{#each buttons}}
                {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary my-2" target="blank">{{text}}</a>{{/if}}
                {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger my-2" target="blank">{{text}}</a>{{/if}}
           {{/each}}
        </div>
    </div>
 </div>