<div class="grid card mb-4 h-100">
     <img src="{{img}}" class="card-img-top" alt="{{name}}">
     <div class="card-body">
         {{#if isHot}} <span class="badge text-bg-warning text-white text-uppercase">hot!</span> {{/if}}
         {{#if isNew}} <span class="badge text-bg-primary">Нове</span> {{/if}}
         {{#if isFast}} <span class="badge text-bg-success">Швидка доставка</span> {{/if}}
         {{#if isFree}} <span class="badge text-bg-secondary">Безкоштовна доставка</span> {{/if}}
        <h4 class="card-name pt-3">{{name}}</h4>
        <p>{{review.amount}} {{review.text}}</p>
        <h3>{{price}}</h3>
        <p>{{delivery}}</p>
        {{#each buttons}}
            {{#if isPrimary}}<button type="button" class="btn btn-primary my-1" href="{{link}}">{{text}}</button>{{/if}}
            {{#if isSecondary}}<button type="button" class="btn btn-secondary my-1" href="{{link}}">{{text}}</button>{{/if}}
        {{/each}}
     </div>
     <ul class="list">
        {{#each characteristics}}
            <li>{{title}}: {{value}}</li>
        {{/each}}
     </ul>
 </div>
